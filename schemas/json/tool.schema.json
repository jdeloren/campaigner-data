{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "D&D 5e Tools",
  "type": "array",
  "items": {
    "description": "D&D 5e Tool including Artisan's Tools, Gaming Sets,\nMusical Instruments, and Miscellaneous tools.",
    "properties": {
      "name": {
        "description": "Tool name",
        "title": "Name",
        "type": "string"
      },
      "description": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ],
        "default": null,
        "description": "Tool description",
        "title": "Description"
      },
      "cost": {
        "$ref": "common.schema.json#/$defs/CurrencyCost",
        "description": "Cost with currency"
      },
      "weight": {
        "description": "Weight in pounds",
        "title": "Weight",
        "type": "number"
      },
      "source": {
        "description": "Source book",
        "title": "Source",
        "type": "string"
      },
      "ruleset": {
        "description": "Ruleset version",
        "title": "Ruleset",
        "type": "string"
      },
      "category": {
        "$ref": "#/$defs/ToolCategory",
        "description": "Tool category"
      },
      "activities": {
        "anyOf": [
          {
            "items": {
              "$ref": "#/$defs/ToolActivity"
            },
            "type": "array"
          },
          {
            "type": "null"
          }
        ],
        "default": null,
        "description": "Activities that can be performed with this tool",
        "title": "Activities"
      }
    },
    "required": [
      "name",
      "cost",
      "weight",
      "source",
      "ruleset",
      "category"
    ],
    "title": "Tool",
    "type": "object"
  },
  "$defs": {
    "ToolActivity": {
      "description": "Activity that can be performed with a tool, including DC for skill checks.",
      "properties": {
        "name": {
          "description": "Activity name/description",
          "title": "Name",
          "type": "string"
        },
        "dc": {
          "$ref": "common.schema.json#/$defs/DifficultyClass",
          "description": "Difficulty class for the activity"
        }
      },
      "required": [
        "name",
        "dc"
      ],
      "title": "ToolActivity",
      "type": "object"
    },
    "ToolCategory": {
      "description": "Categories of D&D 5e tools.",
      "enum": [
        "Artisan's Tools",
        "Gaming Set",
        "Musical Instrument",
        "Miscellaneous"
      ],
      "title": "ToolCategory",
      "type": "string"
    }
  }
}
