      {
        "type": "bonus_action",
        "name": "Hand Crossbow Attack",
        "interaction": {
          "name": "Attack"
        },
        "requirements": [
          {
            "type": "equipment",
            "slot": "main_hand",
            "grip": "one-handed"
          },
          {
            "type": "equipment",
            "item": "Hand Crossbow",
            "holding": true
          }
