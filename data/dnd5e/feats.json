[
  {
    "id": "feat:actor",
    "name": "Actor",
    "description": "Skilled at mimicry and dramatics, you gain the following benefits:",
    "bonuses": [
      "Increase your Charisma score by 1, to a maximum of 20.",
      "You have advantage on Charisma (Deception) and Charisma (Performance) checks when trying to pass yourself off as a different person.",
      "You can mimic the speech of another person or the sounds made by other creatures. You must have heard the person speaking, or heard the creature make the sound, for at least 1 minute. A successful Wisdom (Insight) check contested by your Charisma (Deception) check allows a listener to determine that the effect is faked."
    ],
    "prerequisites": null,
    "mechanics": [
      {
        "type": "passive",
        "name": "Ability Score Increase",
        "effects": [
          {
            "attribute": {
              "target": "ability_scores.Charisma",
              "calculation": {
                "operation": "add",
                "operators": [{ "type": "integer", "value": 1 }]
              }
            }
          }
        ]
      },
      {
        "type": "optional",
        "name": "Mimicry",
        "trigger": {
          "event": ["ability_check"]
        },
        "effects": [
          {
            "advantage": {
              "skill": "Deception"
            }
          },
          {
            "advantage": {
              "skill": "Performance"
            }
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:alert",
    "name": "Alert",
    "description": "Always on the lookout for danger, you gain the following benefits:",
    "bonuses": [
      "You can't be surprised while you are conscious.",
      "You gain a +5 bonus to initiative.",
      "Other creatures don't gain advantage on attack rolls against you as a result of being unseen by you."
    ],
    "prerequisites": null,
    "mechanics": [
      {
        "type": "immunity",
        "name": "Can't Be Surprised",
        "trigger": {
          "event": ["combat_start"],
          "condition": {
            "type": "status",
            "value": "surprised"
          }
        },
        "requirements": [
          {
            "type": "status",
            "value": "unconscious",
            "negate": true
          }
        ],
        "effects": [
          {
            "negate": ["surprised"]
          }
        ]
      },
      {
        "type": "passive",
        "name": "Initiative Bonus",
        "effects": [
          {
            "attribute": {
              "target": "initiative",
              "calculation": {
                "operation": "add",
                "operators": [{ "type": "integer", "value": 5 }]
              }
            }
          }
        ]
      },
      {
        "type": "passive",
        "name": "Unseen Attackers",
        "trigger": {
          "event": ["attacked_by"]
        },
        "effects": [
          {
            "immunity": {
              "category": "advantage",
              "event": "attack",
              "source": {
                "detection": {
                  "detects": ["creatures"],
                  "ignores_status": ["unseen"]
                }
              }
            }
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:athlete",
    "name": "Athlete",
    "description": "You have undergone extensive physical training to gain the following benefits:",
    "bonuses": [
      "Increase your Strength or Dexterity score by 1, to a maximum of 20.",
      "When you are prone, standing up uses only 5 feet of your movement, instead of half your speed.",
      "Climbing doesn't cost you extra movement.",
      "You can make a running long jump or a running high jump after moving only 5 feet on foot, rather than 10 feet."
    ],
    "prerequisites": null,
    "mechanics": [
      {
        "type": "choice",
        "choice_type": "ability_score",
        "name": "Ability Score Increase",
        "count": 1,
        "options": [
          {
            "type": "simple",
            "name": "Strength"
          },
          {
            "type": "simple",
            "name": "Dexterity"
          }
        ],
        "value": {
          "operation": "add",
          "operators": [{ "type": "integer", "value": 1 }]
        }
      },
      {
        "type": "passive",
        "name": "Quick Stand",
        "effects": [
          {
            "attribute": {
              "target": "movement.stand",
              "calculation": {
                "operation": "set",
                "operators": [{ "type": "integer", "value": 5 }]
              }
            }
          }
        ]
      },
      {
        "type": "passive",
        "name": "Climber",
        "effects": [
          {
            "attribute": {
              "target": "movement.climb",
              "calculation": {
                "operation": "set",
                "operators": [
                  {
                    "type": "attribute",
                    "value": "movement.base"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "type": "passive",
        "name": "Running Jump",
        "effects": [
          {
            "attribute": {
              "target": "movement.running_jump_minimum",
              "calculation": {
                "operation": "set",
                "operators": [{ "type": "integer", "value": 5 }]
              }
            }
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:charger",
    "name": "Charger",
    "description": "When you use your action to Dash, you can use a bonus action to make one melee weapon attack or to shove a creature. If you move at least 10 feet in a straight line immediately before taking this bonus action, you either gain a +5 bonus to the attack's damage roll (if you chose to make a melee attack and hit) or push the target up to 10 feet away from you (if you chose to shove and you succeed).",
    "prerequisites": null,
    "mechanics": [
      {
        "type": "bonus_action",
        "name": "Charger",
        "interaction": {
          "name": "Dash"
        },
        "options": [
          {
            "type": "nested",
            "name": "Melee Attack",
            "effects": [
              {
                "grants": {
                  "name": "Attack",
                  "source": {
                    "type": ["melee"]
                  },
                  "count": 1
                }
              },
              {
                "damage_bonus": {
                  "value": 5
                },
                "requirements": [
                  {
                    "type": "movement",
                    "movement": {
                      "distance": 10,
                      "unit": "feet",
                      "direction": "straight_line",
                      "toward": "target"
                    }
                  }
                ]
              }
            ]
          },
          {
            "type": "nested",
            "name": "Shove",
            "effects": [
              {
                "grants": {
                  "name": "Shove",
                  "count": 1
                }
              },
              {
                "forced_movement": {
                  "type": "push",
                  "distance": 10
                },
                "requirements": [
                  {
                    "type": "movement",
                    "movement": {
                      "distance": 10,
                      "unit": "feet",
                      "direction": "straight_line",
                      "toward": "target"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:chef",
    "name": "Chef",
    "description": "Time spent mastering the culinary arts has paid off, granting you the following benefits:",
    "bonuses": [
      "Increase your Constitution or Wisdom score by 1, to a maximum of 20.",
      "You gain proficiency with cook's utensils if you don't already have it.",
      "As part of a short rest, you can cook special food, provided you have ingredients and cook's utensils on hand. You can prepare enough of this food for a number of creatures equal to 4 + your proficiency bonus. At the end of the short rest, any creature who eats the food and spends one or more Hit Dice to regain hit points regains an extra 1d8 hit points.",
      "With one hour of work or when you finish a long rest, you can cook a number of treats equal to your proficiency bonus. These special treats last 8 hours after being made. A creature can use a bonus action to eat one of the treats to gain temporary hit points equal to your proficiency bonus."
    ],
    "prerequisites": null,
    "mechanics": [
      {
        "type": "choice",
        "choice_type": "ability_score",
        "name": "Ability Score Increase",
        "count": 1,
        "options": [
          {
            "type": "simple",
            "name": "Constitution"
          },
          {
            "type": "simple",
            "name": "Wisdom"
          }
        ],
        "value": {
          "operation": "add",
          "operators": [{ "type": "integer", "value": 1 }]
        }
      },
      {
        "type": "proficiency",
        "category": "tool",
        "proficiencies": ["Cook's Utensils"]
      },
      {
        "type": "optional",
        "name": "Special Food",
        "description": "Number of creatures equals 4 + proficiency bonus",
        "trigger": {
          "event": ["short_rest"]
        },
        "requirements": [
          {
            "type": "equipment",
            "item": "Cook's Utensils"
          }
        ],
        "target": {
          "type": "creatures",
          "disposition": "friendly"
        },
        "effects": [
          {
            "healing": {
              "dice": "1d8"
            },
            "requirements": [
              {
                "type": "function",
                "function": "hit_dice_spent"
              }
            ]
          }
        ]
      },
      {
        "type": "passive",
        "name": "Treats",
        "trigger": {
          "event": ["long_rest"]
        },
        "requirements": [
          {
            "type": "equipment",
            "item": "Cook's Utensils"
          }
        ],
        "effects": [
          {
            "entity": {
              "category": "consumable",
              "type": "item",
              "name": "Chef's Treat",
              "count": 1
            },
            "healing": {
              "calculation": {
                "operation": "set",
                "operators": [{ "type": "attribute", "value": "proficiency_bonus" }]
              },
              "barrier": true
            },
            "duration": {
              "value": 8,
              "unit": "hours"
            }
          }
        ]
      }
    ],
    "source": "tce",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:crossbow-expert",
    "name": "Crossbow Expert",
    "description": "Thanks to extensive practice with the crossbow, you gain the following benefits:",
    "bonuses": [
      "You ignore the loading quality of crossbows with which you are proficient.",
      "Being within 5 feet of a hostile creature doesn't impose disadvantage on your ranged attack rolls.",
