            "trigger": {
              "event": ["hit"],
              "source": {
                "type": ["melee"]
              },
              "target": {
                "type": "creature",
                "size": ["Large", "Medium", "Small", "Tiny"]
              }
            },
            "effects": [
              {
                "target": {
                  "type": "event_recipient"
                },
                "apply_status": {
                  "name": "prone"
                }
              }
            ]
          }
        ]
      }
    ],
