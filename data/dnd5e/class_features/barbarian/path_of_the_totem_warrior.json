  {
    "class": "Path of the Totem Warrior",
    "level": 14,
    "name": "Totemic Attunement",
    "description": "At 14th level, you gain a magical benefit based on a totem animal of your choice. You can choose the same animal you selected previously or a different one.",
    "mechanics": [
      {
        "type": "choice",
        "choice_type": "subfeature",
        "count": 1,
        "options_ref": "subfeatures"
      }
    ],
    "subfeatures": [
      {
        "name": "Bear",
        "description": "While you're raging, any creature within 5 feet of you that's hostile to you has disadvantage on attack rolls against targets other than you or another character with this feature. An enemy is immune to this effect if it can't see or hear you or if it can't be frightened.",
        "mechanics": [
          {
            "type": "passive",
            "requirements": [
              {
                "type": "status",
                "value": "raging"
              },
              {
                "type": "inventory_item",
                "name_contains": ["Bear", "Totem"]
              }
            ],
            "effects": [
              {
                "aura": {
                  "radius": 5,
                  "unit": "feet",
                  "target": {
                    "type": "creatures",
                    "disposition": "hostile",
                    "requirements": [
                      {
                        "type": "perception",
                        "observer": "target",
                        "subject": "character",
                        "senses": ["sight", "hearing"],
                        "match": "any"
                      },
                      {
                        "type": "immunity",
                        "value": "frightened",
                        "negate": true
                      }
                    ]
                  },
                  "grants": {
                    "disadvantage": {
                      "attack": "all"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "Eagle",
        "description": "While raging, you have a flying speed equal to your current walking speed. This benefit works only in short bursts; you fall if you end your turn in the air and nothing else is holding you aloft.",
        "mechanics": [
          {
            "type": "passive",
            "requirements": [
              {
                "type": "status",
                "value": "raging"
              },
              {
                "type": "inventory_item",
                "name_contains": ["Eagle", "Totem"]
              }
            ],
            "effects": [
              {
                "attribute": {
                  "target": "flying_speed",
                  "calculation": {
                    "operation": "set",
                    "operators": [
                      {
                        "type": "attribute",
                        "value": "walking_speed"
                      }
                    ]
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "Elk",
        "description": "While raging, you can use a bonus action during your move to pass through the space of a Large or smaller creature. That creature must succeed on a Strength saving throw (DC 8 + your Strength bonus + your proficiency bonus) or be knocked prone and take bludgeoning damage equal to 1d12 + your Strength modifier.",
        "mechanics": [
          {
            "type": "bonus_action",
            "name": "Devastating Charge",
            "requirements": [
              {
                "type": "status",
                "value": "raging"
              },
              {
                "type": "inventory_item",
                "name_contains": ["Elk", "Totem"]
              }
            ],
            "target": {
              "type": "creature",
              "count": 1,
              "requirements": [
                {
                  "type": "size",
                  "value": ["Large", "Medium", "Small", "Tiny"],
                  "match": "any"
                }
              ]
            },
            "effects": [
              {
                "movement": {
                  "type": "pass_through",
                  "target": {
                    "type": "creature"
                  }
                }
              },
              {
                "saving_throw": {
                  "ability": "Strength",
                  "on_failure": {
                    "apply_status": {
                      "name": "prone"
                    },
                    "damage": {
                      "dice": "1d12",
                      "bonus": {
                        "operation": "add",
                        "operators": [
                          {
                            "type": "ability_modifier",
                            "ability": "Strength"
                          }
                        ]
                      },
                      "type": ["bludgeoning"]
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "Tiger",
        "description": "While raging, if you move at least 20 feet in a straight line toward a Large or smaller target right before making a melee weapon attack against it, you can use a bonus action to make an additional melee weapon attack against it.",
        "mechanics": [
          {
            "type": "bonus_action",
            "name": "Pounce",
            "requirements": [
              {
                "type": "status",
                "value": "raging"
              },
              {
                "type": "inventory_item",
                "name_contains": ["Tiger", "Totem"]
              }
            ],
            "trigger": {
              "event": ["attack"],
              "conditions": [
                {
                  "movement": {
                    "distance": 20,
                    "unit": "feet",
                    "direction": "straight_line",
                    "toward": "target"
                  },
                  "type": "melee",
                  "target_size": ["Large", "Medium", "Small", "Tiny"]
                }
              ]
            },
            "grants": {
              "name": "Attack",
              "type": "melee"
            },
            "target": {
              "type": "event_recipient"
            }
          }
        ]
      },
      {
        "name": "Wolf",
        "description": "While raging, you can use a bonus action to knock a Large or smaller creature prone when you hit it with a melee weapon attack.",
        "mechanics": [
          {
            "type": "bonus_action",
            "name": "Knockdown",
            "requirements": [
              {
                "type": "status",
                "value": "raging"
              },
              {
                "type": "inventory_item",
                "name_contains": ["Wolf", "Totem"]
              }
