  {
    "id": "feat:survivor",
    "class": "Champion",
    "level": 18,
    "name": "Survivor",
    "description": "You attain the pinnacle of resilience in battle. At the start of each of your turns, you regain hit points equal to 5 + your Constitution modifier if you have no more than half of your hit points left. You don't gain this benefit if you have 0 hit points.",
    "mechanics": [
      {
        "type": "passive",
        "name": "survivor_regeneration",
        "trigger": {
          "event": ["start_turn"]
        },
        "requirements": [
          {
            "type": "hit_points",
            "comparison": "greater_than",
            "value": 0
          },
          {
            "type": "hit_points",
            "attribute": "hit_points",
            "comparison": "at_most",
            "calculation": {
              "operation": "divide",
              "operators": [
                {
                  "type": "attribute",
                  "value": "max_hit_points"
                },
                {
                  "type": "integer",
                  "value": 2
                }
              ],
              "rounding": "down"
            }
          }
        ],
        "effects": [
          {
            "healing": {
              "calculation": {
                "operation": "add",
                "operators": [
                  {
                    "type": "integer",
                    "value": 5
                  },
                  {
                    "type": "ability_modifier",
                    "ability": "Constitution"
                  }
                ]
              }
            }
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  }
]
