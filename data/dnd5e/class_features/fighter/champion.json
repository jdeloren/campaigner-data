  {
    "id": "feat:remarkable-athlete",
    "class": "Champion",
    "level": 7,
    "name": "Remarkable Athlete",
    "description": "You can add half your proficiency bonus (rounded up) to any Strength, Dexterity, or Constitution check you make that doesn't already use your proficiency bonus. In addition, when you make a running long jump, the distance you can cover increases by a number of feet equal to your Strength modifier.",
    "mechanics": [
      {
        "type": "passive",
        "name": "remarkable_athlete_ability_checks",
        "effects": [
          {
            "attribute": {
              "target": "ability_checks.bonus",
              "calculation": {
                "operation": "add",
                "operators": [
                  {
                    "type": "function",
                    "function": "levels.calculate_proficiency_bonus",
                    "context": "character",
                    "transform": "half_rounded_up"
                  }
                ]
              },
              "requirements": [
                {
                  "type": "ability_check",
                  "proficient": false,
                  "ability": ["Strength", "Dexterity", "Constitution"]
                }
              ]
            }
          }
        ]
      },
      {
        "type": "passive",
        "name": "remarkable_athlete_long_jump",
        "effects": [
          {
            "attribute": {
              "target": "movement.jump.running",
              "calculation": {
                "operation": "add",
                "operators": [
                  {
                    "type": "attribute",
                    "value": "ability_scores.strength.modifier"
                  }
                ]
              }
            }
          }
        ]
      }
    ],
    "source": "phb",
    "ruleset": "dnd5e"
  },
  {
    "id": "feat:additional-fighting-style",
